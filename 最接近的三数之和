class Solution(object):
    def threeSumClosest(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: int
        """
        n = len(nums)
        nums.sort()
        result = float('inf')
        for i in range(n-2):
            l = i+1
            r = n-1
            while l<r:
                tmp = nums[l]+nums[i]+nums[r]
                result = tmp if abs(tmp-target)<abs(result-target) else result
                if result == target:
                    return result
                elif result > target:
                    r -= 1
                else:
                    l += 1
        return result
